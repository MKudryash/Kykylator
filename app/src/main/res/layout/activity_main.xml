<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/fone"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/Zap"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/num2"
        android:layout_marginHorizontal="10dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="85dp"
        android:layout_toRightOf="@+id/num1"
        android:backgroundTint="@color/Knop"
        android:text="."
        android:textSize="25dp" />

    <Button
        android:id="@+id/num1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/num4"
        android:backgroundTint="@color/Knop"
        android:layout_marginHorizontal="10dp"
        android:layout_marginTop="15dp"
        android:textSize="25dp"
        android:text="1" />

    <Button
        android:id="@+id/num2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="10dp"
        android:layout_toRightOf="@+id/num1"
        android:layout_marginTop="15dp"
        android:layout_below="@+id/num4"
        android:backgroundTint="@color/Knop"
        android:textSize="25dp"
        android:text="2" />

    <Button
        android:id="@+id/num3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/num4"
        android:layout_marginHorizontal="10dp"
        android:layout_marginTop="15dp"
        android:layout_toRightOf="@+id/num2"
        android:backgroundTint="@color/Knop"
        android:textSize="25dp"
        android:text="3" />

    <Button
        android:id="@+id/num4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/num7"
        android:layout_marginHorizontal="10dp"

        android:layout_marginTop="15dp"
        android:backgroundTint="@color/Knop"
        android:text="4"
        android:textSize="25dp" />

    <Button
        android:id="@+id/num5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/num7"
        android:layout_marginTop="15dp"
        android:layout_toRightOf="@+id/num4"
        android:layout_marginHorizontal="10dp"
        android:backgroundTint="@color/Knop"
        android:textSize="25dp"
        android:text="5" />

    <Button
        android:id="@+id/num6"
        android:layout_marginTop="15dp"
        android:layout_below="@+id/num7"
        android:layout_toRightOf="@+id/num5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/Knop"
        android:layout_marginHorizontal="10dp"
        android:textSize="25dp"
        android:text="6" />

    <Button
        android:id="@+id/num7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/first_num"
        android:layout_marginHorizontal="10dp"

        android:layout_marginTop="110dp"
        android:backgroundTint="@color/Knop"
        android:text="7"

        android:textSize="25dp" />

    <Button
        android:id="@+id/num8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/first_num"
        android:layout_marginTop="110dp"
        android:layout_marginHorizontal="10dp"
        android:layout_toRightOf="@+id/num7"
        android:backgroundTint="@color/Knop"
        android:textSize="25dp"
        android:text="8" />

    <Button
        android:id="@+id/num9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="10dp"
        android:layout_below="@+id/first_num"
        android:layout_marginTop="110dp"
        android:layout_toRightOf="@+id/num8"
        android:backgroundTint="@color/Knop"
        android:textSize="25dp"
        android:text="9" />

    <Button
        android:id="@+id/num0"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/num2"
        android:layout_marginHorizontal="10dp"
        android:layout_marginTop="15dp"
        android:layout_toRightOf="@+id/num1"
        android:backgroundTint="@color/Knop"
        android:text="0"
        android:textSize="25dp" />

    <Button
        android:id="@+id/rezult"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/num1"
        android:layout_marginTop="15dp"
        android:layout_toRightOf="@+id/num0"
        android:layout_marginHorizontal="10dp"
        android:backgroundTint="@color/orange"
        android:textSize="25dp"
        android:text="=" />

    <Button
        android:id="@+id/plus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/num1"
        android:layout_marginTop="15dp"
        android:layout_marginHorizontal="10dp"
        android:layout_toRightOf="@+id/rezult"
        android:backgroundTint="@color/Fyn"
        android:textSize="25dp"
        android:text="+" />

    <Button
        android:id="@+id/minus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/num4"
        android:layout_marginTop="15dp"
        android:layout_marginHorizontal="10dp"
        android:layout_toRightOf="@+id/num3"
        android:backgroundTint="@color/Fyn"
        android:textSize="25dp"
        android:text="-" />

    <Button
        android:id="@+id/umnog"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/num7"
        android:layout_marginHorizontal="10dp"
        android:layout_marginTop="15dp"
        android:layout_toRightOf="@+id/num6"
        android:backgroundTint="@color/Fyn"
        android:textSize="25dp"
        android:text="*" />

    <Button
        android:id="@+id/delenie"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/first_num"
        android:layout_marginHorizontal="10dp"
        android:layout_marginTop="110dp"
        android:layout_toRightOf="@+id/num9"
        android:backgroundTint="@color/Fyn"
        android:text="/"
        android:textSize="25dp" />

    <Button
        android:id="@+id/chistka"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/num1"
        android:layout_marginHorizontal="10dp"
        android:layout_marginTop="15dp"
        android:backgroundTint="@color/orange"
        android:text="C"
        android:textSize="25dp" />

    <TextView
        android:id="@+id/first_num"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="40dp"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="90dp"
        android:text="_________"
        android:textColor="@color/white"
        android:textSize="23dp" />


    <TextView
        android:id="@+id/second_num"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginHorizontal="20dp"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="90dp"
        android:layout_toRightOf="@+id/first_num"
        android:text="_________"
        android:textColor="@color/white"
        android:textSize="23dp" />

    <TextView
        android:id="@+id/rezalt_vivod"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="90dp"
        android:layout_toRightOf="@+id/rav"
        android:text=""
        android:textColor="@color/white"
        android:textSize="23dp" />

    <TextView
        android:id="@+id/rav"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="90dp"
        android:layout_toRightOf="@+id/second_num"
        android:text="="
        android:textColor="@color/white"
        android:textSize="25dp" />
</RelativeLayout>